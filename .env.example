# Copy this file to .env and fill in your values
# .env is gitignored and will not be committed

# Required: OpenAI API key for LLM extraction
OPENAI_API_KEY=sk-your-key-here

# Optional: Override LLM models (defaults: gpt-5-mini for extraction, gpt-5-nano for classification)
# LLM_MODEL_TEXT=gpt-5-mini
# LLM_MODEL_PDF=gpt-5-mini
# LLM_MODEL_CLASSIFICATION=gpt-5-nano

# Optional: Classification confidence threshold (default: 0.7)
# Falls back to generic template if classification confidence is below this threshold
# CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7

# Optional: Enable controlled failures for testing
# ENABLE_CONTROLLED_FAILURES=true

# Debug: Write LLM prompts to disk for inspection (output in ./tmp/llm-debug/)
# Writes extraction text, system prompt, and user prompt for each document
# DEBUG_LLM_PROMPTS=1
