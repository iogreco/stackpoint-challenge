{
  "name": "stackpoint-challenge",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "integration-tests"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint . --ext .ts",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test --workspace=integration-tests"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
